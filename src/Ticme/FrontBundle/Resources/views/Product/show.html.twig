{% extends 'TicmeFrontBundle::layout.html.twig' %}

{% block title %}{{ product.title }}{% endblock %}

{% block description %}{{ product.description }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            {{ wo_render_breadcrumbs() }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            {{ render(controller('TicmeFrontBundle:Category:categorieMenu')) }}
        </div>

        <div class="col-md-8">
            <div class="row">
                <h1 class="page-header">
                    {{ product.title }} - {{ product.priceHt|tva(product.tva.multi) }} €
                </h1>
                {% if product.image is not null %}
                    {% if product.image.path  is not null %}
                        <img src="{{ asset( 'uploads/img/thumb-800-500-'~product.image.path) }}" alt="{{ product.image.name }}">
                    {% endif %}
                {% else %}
                    <img src="http://placehold.it/800x500" alt="{{ product.title }}" class="pull-right">
                {% endif %}
                <div class="col-lg-6">
                    <h3>Description</h3>
                    <p>{{ product.description|raw }}</p>
                </div>
                <div class="col-lg-6">
                        <h3>Quantité</h3>
                        <form action="">
                            <br />
                            <select name="qte" class="form-control">
                                <option>1</option>
                            </select>
                            <br />
                            <button class="btn btn-info"><i class="fa fa-edit"></i> Ajouter au panier</button>
                        </form>
                </div>
            </div>
        </div>

    </div>
    <!-- /.row -->

    <!-- Related Projects Row -->
    <div class="row">

        <div class="col-lg-12">
            <h3 class="page-header">Related Projects</h3>
        </div>

        <div class="col-sm-3 col-xs-6">
            <a href="#">
                <img class="img-responsive portfolio-item" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

        <div class="col-sm-3 col-xs-6">
            <a href="#">
                <img class="img-responsive portfolio-item" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

        <div class="col-sm-3 col-xs-6">
            <a href="#">
                <img class="img-responsive portfolio-item" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

        <div class="col-sm-3 col-xs-6">
            <a href="#">
                <img class="img-responsive portfolio-item" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

    </div>
    <!-- /.row -->
{% endblock %}
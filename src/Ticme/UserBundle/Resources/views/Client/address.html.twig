{% extends 'TicmeBackBundle::layout.html.twig' %}

{% block content %}
    <div class="row">
    <div class="col-lg-12">
        <h1>Adresse Client {{ entity.id }}</h1>

        <table class="table table-striped table-hover ">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Tel</th>
                <th>Adresse</th>
                <th>Complement</th>
                <th>Code Postal</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>Date création</th>
            </tr>
            </thead>
            <tbody>
                {% for address in entity.address %}
                    <tr>
                        <td>{{ address.id }}</td>
                        <td>{{ address.name }}</td>
                        <td>{{ address.lastname }}</td>
                        <td>{{ address.phone }}</td>
                        <td>{{ address.address }}</td>
                        <td>{{ address.complement }}</td>
                        <td>{{ address.zipcode }}</td>
                        <td>{{ address.city }}</td>
                        <td>{{ address.country }}</td>
                        <td>{{ address.createdAt|date }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="box-footer">
            <a href="{{ path('client') }}" class="btn btn-default"><i class="fa fa-mail-reply"></i> Revenir à la liste des clients</a>
        </div>
    </div>
{% endblock %}
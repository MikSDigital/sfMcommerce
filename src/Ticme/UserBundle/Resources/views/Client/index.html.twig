{% extends 'TicmeBackBundle::layout.html.twig' %}

{% block content %}
<div class="row">
    <div class="col-lg-12">
        <h2>Tous les clients</h2>
        <table class="table table-striped table-hover ">
            <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th class="pull-right">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.email }}</td>
                <td>
                    <span class="pull-right">
                        <a href="{{ path('client_invoice', { 'id': entity.id }) }}" class="btn btn-success btn-xs"><i class="fa fa-map-marker"></i> Facture</a>
                        <a href="{{ path('client_address', { 'id': entity.id }) }}" class="btn btn-success btn-xs"><i class="fa fa-shopping-cart"></i> Adresse</a>
                        <a href="{{ path('user_show', { 'id': entity.id }) }}" class="btn btn-success btn-xs"><i class="fa fa-eye"></i> Voir</a>
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}" class="btn btn-info btn-xs"><i class="fa fa-edit"></i> Editer</a>
                    </span>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>

    <div class="col-lg-3">
        <a href="{{ path('client_new') }}" class="btn btn-primary"><i class="fa fa-mail-reply"></i> Cr√©er un client</a>
    </div>

    <div class="col-lg-9">

    </div>
</div>
    {% endblock %}

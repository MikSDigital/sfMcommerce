{% extends 'TicmeBackBundle::layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h2>Tous les users</h2>
            <table class="table table-striped table-hover ">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th class="pull-right">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% if users is defined %}
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                    <span class="pull-right">
                                        <a href="{{ path('ticme_back_user_show', {'id': user.id}) }}" class="btn btn-success btn-xs"><i class="fa fa-eye"></i> Voir</a>
                                        <a href="{{ path('ticme_back_user_edit', {'id': user.id}) }}" class="btn btn-info btn-xs"><i class="fa fa-edit"></i> Editer</a>

                                        <span class="pull-right">
                                            {{ form_start(delete_form) }}
                                                {{ form_widget(delete_form.submit, { 'label' : 'Supprimer', 'attr': {'class': 'btn btn-danger btn-xs', 'data-loading-text': 'Supprimer'} }) }}
                                                {{ form_rest(delete_form) }}
                                            {{ form_end(delete_form) }}
                                        </span>
                                    </span>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>

        <div class="col-lg-3">
            <a href="{{ path('ticme_back_user_create') }}" class="btn btn-primary"><i class="fa fa-mail-reply"></i> Cr√©er un Produit</a>
        </div>

        <div class="col-lg-9">
            {{ knp_pagination_render(users) }}
        </div>
    </div>
{% endblock %}
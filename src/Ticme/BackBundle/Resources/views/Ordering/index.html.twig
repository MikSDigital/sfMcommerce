{% extends 'TicmeBackBundle::layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h2>Toutes les Commandes</h2>
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Reference</th>
                        <th>Contenu</th>
                        <th>Validé</th>
                        <th>Daté de création</th>
                        <th class="pull-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% if orderings is defined %}
                    {% for ordering in orderings %}
                        <tr>
                            <td>{{ ordering.id }}</td>
                            <td>{{ ordering.reference }}</td>
                            <td>{{ ordering.products }}</td>
                            <td>{{ ordering.validated }}</td>
                            <td>{{ ordering.createdAt }}</td>
                            <td>
                                    <span class="pull-right">
                                        <a href="{{ path('ticme_back_ordering_show', {'id': ordering.id}) }}" class="btn btn-success btn-xs"><i class="fa fa-eye"></i> Voir</a>
                                        <a href="{{ path('ticme_back_ordering_edit', {'id': ordering.id}) }}" class="btn btn-info btn-xs"><i class="fa fa-edit"></i> Editer</a>
                                        <a href="{{ path('ticme_back_ordering_delete', {'id': ordering.id}) }}" class="btn btn-danger btn-xs"><i class="fa fa-remove"></i> Supprimer</a>
                                    </span>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>

        <div class="col-lg-3">
            <a href="{{ path('ticme_back_ordering_create') }}" class="btn btn-primary"><i class="fa fa-mail-reply"></i> Créer une Commande</a>
        </div>
        {% if orderings is defined %}
            <div class="col-lg-9">
                {{ knp_pagination_render(orderings) }}
            </div>
        {% endif %}
    </div>
{% endblock %}
{% extends 'TicmeBackBundle::layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h2>Toutes les Categories</h2>
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th class="pull-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% if categories is defined %}
                    {% for categorie in categories %}
                        <tr>
                            <td>{{ categorie.id }}</td>
                            <td>{{ categorie.title }}</td>
                            <td>{{ categorie.description }}</td>
                            <td>
                                    <span class="pull-right">
                                        <a href="{{ path('ticme_back_category_show', {'id': categorie.id}) }}" class="btn btn-success btn-xs"><i class="fa fa-eye"></i> Voir</a>
                                        <a href="{{ path('ticme_back_category_edit', {'id': categorie.id}) }}" class="btn btn-info btn-xs"><i class="fa fa-edit"></i> Editer</a>
                                        <a href="{{ path('ticme_back_category_delete', {'id': categorie.id}) }}" class="btn btn-danger btn-xs"><i class="fa fa-remove"></i> Supprimer</a>
                                    </span>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>

        <div class="col-lg-3">
            <a href="{{ path('ticme_back_category_create') }}" class="btn btn-primary"><i class="fa fa-mail-reply"></i> Créer une Catégorie</a>
        </div>
        {% if categories is defined %}
            <div class="col-lg-9">
                {{ knp_pagination_render(categories) }}
            </div>
        {% endif %}
    </div>
{% endblock %}
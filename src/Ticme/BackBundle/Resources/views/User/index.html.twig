{% extends 'TicmeBackBundle::layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h2>Tous les Produits</h2>
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Prix HT</th>
                        <th>Dispo</th>
                        <th class="pull-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% if products is defined %}
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td>{{ product.title }}</td>
                            <td>{{ product.description }}</td>
                            <td>{{ product.priceHt }}</td>
                            <td>{{ product.available }}</td>
                            <td>
                                    <span class="pull-right">
                                        <a href="{{ path('ticme_back_product_show', {'id': product.id}) }}" class="btn btn-success btn-xs"><i class="fa fa-eye"></i> Voir</a>
                                        <a href="{{ path('ticme_back_product_edit', {'id': product.id}) }}" class="btn btn-info btn-xs"><i class="fa fa-edit"></i> Editer</a>
                                        <a href="{{ path('ticme_back_product_delete', {'id': product.id}) }}" class="btn btn-danger btn-xs"><i class="fa fa-remove"></i> Supprimer</a>
                                    </span>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>

        <div class="col-lg-3">
            <a href="{{ path('ticme_back_product_create') }}" class="btn btn-primary"><i class="fa fa-mail-reply"></i> Cr√©er un Produit</a>
        </div>
        {% if products is defined %}
            <div class="col-lg-9">
                {{ knp_pagination_render(products) }}
            </div>
        {% endif %}
    </div>
{% endblock %}